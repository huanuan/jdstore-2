<div class="pull-right">
  <%= link_to("Add a product", new_admin_product_path, :class => "btn btn-default" )%>
</div>

<table class="table table-boldered">
  <% @products.each do |product| %>
    <tr>
      <td>
        <img src="<%=product.image.mobile %>" alt="" />
      </td>
      <td>
        <%= link_to(product.title, admin_product_path(product) )%>
      </td>
      <td>
        <%= link_to(product.price, admin_product_path(product) )%>
      </td>
      <td>
        <%= link_to(product.quantity, admin_product_path(product) )%>
      </td>
      <td>
        <%= link_to("Edit", edit_admin_product_path(product)) %>  |
        <%= link_to("destroy", admin_product_path(product), method: :delete, data:{confirm: "Are you sure?"}) %> |
        <% if product.is_hidden %>

          <%= link_to("Publish", publish_admin_product_path(product), method: :post, class: "btn btn-xs btn-default") %>
        <% else %>
          <%= link_to("Hide", hide_admin_product_path(product), method: :post, class: "btn btn-xs btn-default") %>
        <% end %>

      </td>
      <td>
        <%= product.created_at%>
      </td>
    </tr>
  <% end %>
</table>
