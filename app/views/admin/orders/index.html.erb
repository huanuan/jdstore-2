<table class="table table-boldered">
  <thead>
    <tr>
      <th>订单号</th>
      <th>更新时间</th>
      <th>订单状态</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td>
          <%= link_to(order.user_id, admin_order_path(order) )%>
        </td>
        <td>
          <%= order.created_at %>
        </td>
        <td>
        </td>
        <td>
          <%= link_to("Edit", edit_admin_order_path(order)) %>  |
          <%= link_to("destroy", admin_order_path(order), method: :delete, data:{confirm: "Are you sure?"}) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
